<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:upload="sap.m.upload">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormChange480_Trial"
			editable="true"
			layout="ResponsiveGridLayout"
			title="{title}"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="2"
			singleContainerFullSize="false" >
			<f:content>
            <core:Title text="Office" />

				<Label text="ID" />
				<Text text="{id}" />

				<Label text="ID Mercadolibre" />
				<Text text="{ml_id}" />

				<Label text="Estado de Publicacion" />
				<Text text="{status}" />

				<Label text="Fuente" />
				<Text text="{fuente}" />

				<Label text="Marca" />
				<Text text="{brand}" />

				<Label text="Modelo" />
				<Text text="{model}" />

				<Label text="Condicion" />
				<Text text="{condition}" />

				<Label text="Titulo Original" />
				<Text text="{titleraw}" />

				<Label text="Titulo Publicacion" />
				<Input value="{title}" />

				<Label text="ID Categoria" />
				<Input value="{category_id}" />

				<Label text="Costo" />
				<Input value="{cost}" />

				<Label text="Precio de Publicacion" />
				<Input value="{price}" />

				<Label text="Cantidad" />
				<Input value="{available_quantity}" />
				
				<Label text="Tiempo de Manufactura" />
				<Input value="{manufacturing_time}" />

				<Label text="Metodo de Compra" />
				<Input value="{buying_mode}" />


				<Label text="Tipo de Garantia" />
				<Input value="{warranty_type}" />


				<Label text="Tiempo de Garantia" />
				<Input value="{warranty_time}" />


				<Label text="Envio" />
				<Input value="{envio}" />


				<Label text="Moneda" />
				<Input value="{currency_id}" />

				<Label text="Tipo de Publicacion" />
				<Input value=   "{listing_type_id}" />

				<Label text="Descripcion" />
				<TextArea value="{description}" editable="true" height="10rem"/>

			<core:Title text="Online" />

				<Label text="URL Mercadolibre" />
				<Link text="{urlml}" href="{urlml}" target="_blank"/>

				<Label text="URL Origen" />
				<Link text="{urlorig}" href="{urlorig}" target="_blank"/>

			</f:content>
		</f:SimpleForm>

		<upload:UploadSet
			id="UploadSet"
			instantUpload="false"
			showIcons="true"
			uploadEnabled="true"
			terminationEnabled="true"
			fileTypes="jpeg,png,jpg"
			maxFileNameLength="30"
			maxFileSize="200"
			mediaTypes="image/jpeg,image/png,image/jpg"
			uploadUrl="static/media/images"
			items="{path: '/items', templateShareable: false}">
		<upload:items>
			<upload:UploadSetItem
					fileName="{fileName}"
					mediaType="{mediaType}"
					url="{url}"
					thumbnailUrl="{thumbnailUrl}"
					attributes="{path: 'attributes', templateShareable: false}"
					markers="{path: 'markers', templateShareable: false}"
					statuses="{path: 'statuses', templateShareable: false}"
					uploadState="{uploadState}">
				<upload:attributes>
					<ObjectAttribute
							title="{title}"
							text="{text}"
							active="{active}"/>
				</upload:attributes>
				<upload:markers>
					<ObjectMarker
							type="{type}"
							visibility="{visibility}"/>
				</upload:markers>
				<upload:statuses>
					<ObjectStatus
							title="{title}"
							text="{text}"
							state="{state}"
							icon="{icon}"
							active="{active}"/>
				</upload:statuses>
			</upload:UploadSetItem>
		</upload:items>
	</upload:UploadSet>

	</VBox>
</core:FragmentDefinition>